	-- Remove this function if not needed
end

function update(self, dt)
end

function on_message(self, message_id, message, sender)
	if message_id == hash("check_home_timer") then
		if h.count == home_count then
			timer.cancel(0)
		end
	elseif message_id == hash("check_shop_timer") then
		if s.count == shop_count then
			timer.cancel(1)
		end
	end
end

