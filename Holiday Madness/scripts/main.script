local c = require "scripts.coordinates"
local h = require "scripts.home"
local s = require "scripts.shop"
local home_count = 20
local spawning_home_time = 1
local spawning_shop_time = 5

function init(self)
	math.randomseed(os.time())
	c.initCoord()
	s.initShops()
	h.initHomes()
	timer.delay(spawning_home_time, true, add_homes, 0)
	timer.delay(spawning_shop_time, true, add_shops, 1)
	
end

